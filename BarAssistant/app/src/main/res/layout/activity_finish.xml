<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/finishWorkout"
        android:textSize="100dp"
        android:textAlignment="center"
        android:layout_marginBottom="100dp"
        android:id="@+id/finishView"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/yourTime"
        android:textSize="60dp"
        android:textAlignment="center"
        android:id="@+id/finishViewTime"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/returnToMainActivity"
            android:textSize="65dp"
            android:textColor="@color/backgroundListItem"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/red_A700"
            android:id="@+id/borderlessButton"
            android:onClick="onClick"
            android:layout_gravity="bottom" />

    </LinearLayout>
</LinearLayout>